<!DOCTYPE html>
<link href="/Content/bootstrap.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:lightblue">
    <table style="width:100%">
        <!--1st Row-->
        <tr>
            <td style="width:30%">
                <img id="img1" height="70" width="70" src="~/images/1.png" class="img-circle" />
            </td>
            <td style="width:70%">
                <h2>Way to Success</h2>
                <nav class="navbar-inverse">
                    <a href="~/home/aboutus" class="btn btn-primary">
                        About Us
                    </a>
                    <a href="~/home/contactus" class="btn btn-primary">
                        Contact Us
                    </a>
                </nav>
            </td>
        </tr>
        <!--2nd Row-->
        <tr>
            <td class="btn-group-vertical" style="width:30%">
                <a href="~/home/tutorials" class="btn btn-primary">
                    Tutorials
                </a>
                <a href="~/home/books" class="btn btn-primary">Books</a>
            </td>
            <td style="width:70%">
                @RenderBody()
            </td>
        </tr>
        <!--3rd Row-->
        <tr>
            <td colspan="2" style="text-align:center">
                @RenderSection("s1",false)
            </td>
        </tr>
        <!--4th Row-->
        <tr class="navbar-fixed-bottom">
            <td colspan="2">
                <h4>Copy Rights &copy; Reserver to Nurul INC</h4>
            </td>
        </tr>
    </table>
</body>
</html>
